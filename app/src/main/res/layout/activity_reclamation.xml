<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout5"
    tools:context=".ReclamationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/reclamtoolbar"/>

        <EditText
            android:id="@+id/emailreclam"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/designelabel"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="@string/emaillabel"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/msgreclam"
            android:layout_width="333dp"
            android:layout_height="475dp"
            android:layout_margin="10dp"
            android:background="@drawable/designelabel"
            android:ems="10"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/envoyerreclam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/designe_btn"
                android:text="Envoyer"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/annulerreclam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Annuler"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>